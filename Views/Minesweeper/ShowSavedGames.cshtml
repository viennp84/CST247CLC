@model IEnumerable<CST247CLC.Models.GameStorageModel>
@using Microsoft.AspNetCore.Http;

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateTime)
                </td>
                @if (Context.Session.GetInt32("userId") == item.userId)
                {
                    <td>
                        <form asp-controller="Minesweeper" asp-action="LoadGameClick">
                            <input type="hidden" name="jsonString" id="jsonString" value="@item.gameBoard" class="form-control" />
                            <input type="submit" value="Load Game" class="btn btn-primary" />
                        </form>

                        <form asp-controller="Minesweeper" asp-action="DeleteGame">
                            <input type="hidden" name="Id" id="Id" value="@item.id" class="form-control" />
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </form>
                    </td>
                }
                
            </tr>
        }
    </tbody>
</table>
